<div class="row">
  <%= form_for(@user, html: { class: 'col-md-6 col-md-offset-3' }) do |f| %>
    <% if @user.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>
  
        <ul>
        <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>
  
    <div class="form-group">
      <%= f.label :name, class: 'control-label' %><br>
      <%= f.text_field :name, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :email, class: 'control-label' %><br>
      <%= f.text_field :email, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :password, class: 'control-label' %><br>
      <%= f.password_field :password, class: 'form-control' %>
    </div>
    <div class="actions">
      <%= f.submit 'Create User', class: 'btn btn-primary btn-lg btn-block' %>
    </div>
  <% end %>
</div>
